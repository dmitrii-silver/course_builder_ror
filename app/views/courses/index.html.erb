<div class="ml-5 mr-5">
  <div class="columns">
    <div class="column">
      <h2 class="title is-pulled-left">Список курсов:</h2>
    </div>
    <div class="column is-one-fifth">
      <div>
        <%= button_to '+Новый курс', new_course_path, method: :get, class: "button is-link" %>
      </div>
    </div>
  </div>

  <div class="downline"></div>

  <div class="content">
    <% @courses.each do |course| %>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <p class="is-italic has-text-weight-light"><%= course.volume %></p>
              <h5 class="title is-5"><a href="<%= "/courses/#{course.id}" %> "><%= course.name %></a></h5>
            </td>
            <td>
              <p>&nbsp;</p>
              <div class="level-right">
                <p class="has-text-weight-bold"><%= course.annotation %></p>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>