<div class="ml-5 mr-5">
  <div class="columns">
    <div class="column">
      <h2 class="title is-pulled-left"><%= @unit.name %></h2>
    </div>
    <div class="column is-one-fifth">
      <div>
        <%= button_to 'Редактировать', edit_course_unit_path, method: :get, class: "button is-link" %>
      </div>
      <div class="mt-2">
        <%= button_to 'Вернуться', course_path(@course), method: :get, class: "button is-link" %>
      </div>
    </div>
  </div>

  <div class="downline"></div>

    <h2 class="title">Содержание модуля</h2>
  <div class="content">
    <%= @unit.body %>
  </div>

  <div class="mt-5">
    <%= button_to 'Удалить модуль', course_unit_path, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "button is-focused" %>
  </div>
</div>